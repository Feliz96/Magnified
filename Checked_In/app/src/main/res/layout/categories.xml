<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/grdnt"
    android:orientation="vertical" >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp">

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Event Categories"
            android:id="@+id/txtTitle"
            android:textColor="#ECF0F1"
            android:textSize="18dp"
            android:background="@drawable/grdnt"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:paddingLeft="10dp"
            android:textStyle="bold|italic" />
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.0"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imgAcademic"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:src="@drawable/academic"
            android:layout_gravity="center"
            android:scaleType="center"
            android:background="@drawable/image_round"
            android:layout_weight="1.0"
            android:text="Academic" />


        <ImageView
            android:id="@+id/imgRestaurant"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/restaurant"
            android:background="@drawable/image_round"
            android:scaleType="center"
            android:layout_weight="1.0"
            android:text="Restaurants" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.0"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imgClub"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/club"
            android:background="@drawable/image_round"
            android:scaleType="center"
            android:layout_weight="1.0"
            android:text="Club" />

        <ImageView
            android:id="@+id/imgMovies"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1.0"
            android:background="@drawable/image_round"
            android:scaleType="center"
            android:src="@drawable/film"
            android:text="Movies" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1.0"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/imgSocial"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/image_round"
            android:scaleType="center"
           android:src="@drawable/social"
            android:layout_weight="1.0"
            android:textSize="18dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:text="Social" />

        <ImageView
            android:id="@+id/imgFash"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/image_round"
            android:src="@drawable/fash"
            android:scaleType="center"
            android:layout_weight="1.0"
            android:text="Fashion" />

    </LinearLayout>

</LinearLayout>